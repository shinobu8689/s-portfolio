<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sleep_application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_neutral500</item>
        <item name="colorSecondaryVariant">@color/dark_neutral500</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/dark_neutral500</item>
        <!-- Customize your theme here.
        <style name="CardBackground"><item name="android:background">@color/dark_neutral500</item></style>
          -->
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/dark_neutral100</item></style>
    <style name="ActionbarColor"><item name="android:colorPrimary">@color/dark_grey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/light_grey</item></style>
    <style name="ToolbarColor"><item name="android:windowBackground">@color/dark_neutral500</item></style>

</resources>